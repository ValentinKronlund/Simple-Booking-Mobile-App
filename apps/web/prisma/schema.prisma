generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum RoomState {
  vacant
  occupied
  booked
}

model Room {
  id           String     @id @default(cuid())
  name         String     @unique
  capacity     Int
  availability TimeSlot[] 

  @@index([name])
}

model TimeSlot {
  id        String    @id @default(cuid())
  roomId    String
  room      Room      @relation(fields: [roomId], references: [id], onDelete: Cascade)

  startUtc  DateTime
  endUtc    DateTime
  state     RoomState
  bookedBy  String?

  @@unique([roomId, startUtc])
  @@index([roomId, startUtc, endUtc], map: "idx_timeslot_room_time")
}